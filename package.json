    "async": "2.1.5",
    "bcrypt": "1.0.2",
    "dotenv": "4.0.0",
    "file-exists": "3.0.2",
    "foreman": "2.0.0",
    "mysql": "^2.13.0",
    "sequelize": "^3.30.2",
    "sequelize-cli": "2.5.1",
